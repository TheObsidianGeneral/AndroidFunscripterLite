<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="24dp"
    tools:context=".MainActivity">

    <!-- Vertical Guideline -->

    <!-- Horizontal Guideline -->

    <!-- PlayerView as the bottom layer -->

    <!-- Top Control Bar as the top layer -->

    <LinearLayout
        android:id="@+id/menu_popup"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="48dp"
        android:animateLayoutChanges="true"
        android:background="#E94444"
        android:elevation="11dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/select_video_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Select Video"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/load_script_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Load Script"
            tools:ignore="HardcodedText" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="8dp"
            android:background="?android:attr/listDivider" />

        <Button
            android:id="@+id/button_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#B049ED"
            android:elevation="10dp"
            android:text="Save"
            android:textColor="#ffffff"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/menu_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/rounded_button"
                    android:backgroundTint="#1919C1"
                    android:elevation="10dp"
                    android:src="@drawable/ic_menu"
                    tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

                <Button
                    android:id="@+id/button_prev_frame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/rounded_button"
                    android:backgroundTint="#AF4AEB"
                    android:elevation="10dp"
                    android:text="Prev"
                    android:textColor="#ffffff"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/button_next_frame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/rounded_button"
                    android:backgroundTint="#AF4AEB"
                    android:elevation="10dp"
                    android:text="Next"
                    android:textColor="#ffffff"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/button_prev_action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/rounded_button"
                    android:backgroundTint="#124499"
                    android:elevation="10dp"
                    android:text="PrevA"
                    android:textColor="#ffffff"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/button_next_action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/rounded_button"
                    android:backgroundTint="#124397"
                    android:elevation="10dp"
                    android:text="NextA"
                    android:textColor="#ffffff"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/button_play"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/rounded_button"
                    android:backgroundTint="#239737"
                    android:elevation="10dp"
                    android:text="Play"
                    android:textColor="#ffffff"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/button_delete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="#F43030"
                    android:text="Delete"
                    tools:ignore="HardcodedText" />

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.google.android.exoplayer2.ui.PlayerView
                android:id="@+id/player_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center|center_horizontal"
                android:layout_weight="1"
                android:background="@android:color/black"
                app:resize_mode="fit"
                app:show_buffering="when_playing"
                app:surface_type="surface_view"
                app:use_controller="false">

            </com.google.android.exoplayer2.ui.PlayerView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/heatmap_container"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <SurfaceView
                    android:id="@+id/heatmap_view"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/position_indicator"
                    android:layout_width="2dp"
                    android:layout_height="0dp"
                    android:background="#FFFFFF"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <GridLayout
                    android:id="@+id/grid_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/grid_margin"
                    android:layout_marginTop="@dimen/grid_margin"
                    android:columnCount="2"
                    android:rowCount="6">

                    <Button
                        android:id="@+id/button_0"
                        style="@style/GridButton"
                        android:layout_width="wrap_content"
                        android:backgroundTint="#2332B1"
                        android:text="0"
                        android:visibility="visible"
                        tools:ignore="HardcodedText" />

                    <Button
                        android:id="@+id/button_10_top"
                        style="@style/GridButton"
                        android:layout_width="wrap_content"
                        android:backgroundTint="#238BB1"
                        android:text="100"
                        android:visibility="visible"
                        tools:ignore="HardcodedText" />

                    <Button
                        android:id="@+id/button_1"
                        style="@style/GridButton"
                        android:layout_width="wrap_content"
                        android:backgroundTint="#AF4AEB"
                        android:text="10"
                        android:visibility="visible"
                        tools:ignore="HardcodedText" />

                    <Button
                        android:id="@+id/button_2"
                        style="@style/GridButton"
                        android:layout_width="wrap_content"
                        android:backgroundTint="#AF4AEB"
                        android:text="20"
                        android:visibility="visible"
                        tools:ignore="HardcodedText" />

                    <Button
                        android:id="@+id/button_3"
                        style="@style/GridButton"
                        android:layout_width="wrap_content"
                        android:backgroundTint="#AF4AEB"
                        android:text="30"
                        android:visibility="visible"
                        tools:ignore="HardcodedText" />

                    <Button
                        android:id="@+id/button_4"
                        style="@style/GridButton"
                        android:layout_width="wrap_content"
                        android:backgroundTint="#AF4AEB"
                        android:text="40"
                        android:visibility="visible"
                        tools:ignore="HardcodedText" />

                    <Button
                        android:id="@+id/button_5"
                        style="@style/GridButton"
                        android:layout_width="wrap_content"
                        android:backgroundTint="#AF4AEB"
                        android:text="50"
                        android:visibility="visible"
                        tools:ignore="HardcodedText" />

                    <Button
                        android:id="@+id/button_6"
                        style="@style/GridButton"
                        android:layout_width="wrap_content"
                        android:backgroundTint="#AF4AEB"
                        android:text="60"
                        android:visibility="visible"
                        tools:ignore="HardcodedText" />

                    <Button
                        android:id="@+id/button_7"
                        style="@style/GridButton"
                        android:layout_width="wrap_content"
                        android:backgroundTint="#AF4AEB"
                        android:text="70"
                        android:visibility="visible"
                        tools:ignore="HardcodedText" />

                    <Button
                        android:id="@+id/button_8"
                        style="@style/GridButton"
                        android:layout_width="wrap_content"
                        android:backgroundTint="#AF4AEB"
                        android:text="80"
                        android:visibility="visible"
                        tools:ignore="HardcodedText" />

                    <Button
                        android:id="@+id/button_9"
                        style="@style/GridButton"
                        android:layout_width="wrap_content"
                        android:backgroundTint="#AF4AEB"
                        android:text="90"
                        android:visibility="visible"
                        tools:ignore="HardcodedText" />

                    <Button
                        android:id="@+id/button_10"
                        style="@style/GridButton"
                        android:layout_width="wrap_content"
                        android:backgroundTint="#AF4AEB"
                        android:text="100"
                        android:visibility="visible"
                        tools:ignore="HardcodedText" />

                    <Button
                        android:id="@+id/button_minus_0_5"
                        style="@style/GridButton"
                        android:layout_width="wrap_content"
                        android:backgroundTint="#CE1E1E"
                        android:text="-5"
                        android:visibility="visible"
                        tools:ignore="HardcodedText" />

                    <Button
                        android:id="@+id/button_plus_0_5"
                        style="@style/GridButton"
                        android:layout_width="wrap_content"
                        android:backgroundTint="#0A7836"
                        android:text="+5"
                        android:visibility="visible"
                        tools:ignore="HardcodedText" />

                    <Button
                        android:id="@+id/button_minus_0_1"
                        style="@style/GridButton"
                        android:layout_width="wrap_content"
                        android:backgroundTint="#DE4646"
                        android:text="-1"
                        android:visibility="visible"
                        tools:ignore="HardcodedText" />

                    <Button
                        android:id="@+id/button_plus_0_1"
                        style="@style/GridButton"
                        android:layout_width="wrap_content"
                        android:backgroundTint="#50D378"
                        android:text="+1"
                        android:visibility="visible"
                        tools:ignore="HardcodedText" />

                </GridLayout>

                <!-- Control Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/copy_action"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            android:layout_weight="1"
                            android:text="Copy"
                            tools:ignore="ButtonStyle,HardcodedText" />

                        <Button
                            android:id="@+id/paste_action"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:layout_weight="1"
                            android:text="Paste"
                            tools:ignore="ButtonStyle,HardcodedText" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Menu Popup as top layer -->

    <!-- Heatmap Container -->

</FrameLayout>